<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlt_main_jobs_near_by"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_contacts"
    android:orientation="horizontal"
    android:padding="5dip">

    <!--  ListRow Left side Thumbnail image -->
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip">

        <ImageView
            android:id="@+id/imv_logo_customlist_jobs_near_by"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/logo_ddb" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:id="@+id/ln_company_customlist_jobs_near_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_company_customlist_jobs_near_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DDB Philippines"
                android:textColor="#040404"
                android:textSize="15dip"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tv_km_customlist_jobs_near_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="(35km form you)"
                android:textColor="#343434"
                android:textSize="10dip" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_address_customlist_jobs_near_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ln_company_customlist_jobs_near_by"
            android:text="Data Analyst | Philippines, Taguig City"
            android:textColor="#343434"
            android:textSize="12dip"
            android:typeface="sans" />

        <TextView
            android:id="@+id/tv_salary_customlist_jobs_near_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_address_customlist_jobs_near_by"
            android:text="$10,000 PHP - 12,000 PHP"
            android:textColor="#343434"
            android:textSize="12dip" />
    </RelativeLayout>


</RelativeLayout>